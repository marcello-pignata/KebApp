<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutProfilo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profilo.ProfiloFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_black"
        android:text="PROFILO"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_badge_24"
                android:text=" ID"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_email_24"
                android:text=" Email"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_person_24"
                android:text=" Nome"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/baseline_phone"
                android:text=" Numero"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_delivery_dining_24"
                android:text=" Fattorino?"
                android:textColor="@color/black"
                android:textSize="19dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="jlksadfojagbdhskjhfbaDSLKJ"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewEmailUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="pinco.pallino@mail.it"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewNomeUtente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Pinco Pallino"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textViewNumeroTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="3289488034"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <CheckBox
                android:id="@+id/checkBoxFattorino"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="false"
                android:buttonTint="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="120dp"
        android:layout_height="61dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/white"
        android:text="Log Out"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>