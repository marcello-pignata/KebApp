<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KebApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item> <!-- DISABLE NIGHT MODE -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cornflowerBlue</item>
        <item name="colorPrimaryVariant">@color/cornflowerBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gildedLily</item>
        <item name="colorSecondaryVariant">@color/gildedLily</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>